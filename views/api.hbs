    <script>
        
       
        const addtourlavail = () => {
            const url = document.getElementById('url').value
            let data = document.getElementById('availabilityinput').value;
            if (url.indexOf("?availability=") >= 0) {
                alert("can't use same query for multiple times")
            }
            else {
                document.getElementById('url').value += `?availability=${data}`;
                console.log("added")
            }
        }
        const testapi = () => {
            const url = document.getElementById('url').value;
            window.open(url)
        }
    </script>
